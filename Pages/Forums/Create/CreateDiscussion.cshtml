@page
@model MineHopWebsite.Pages.Forums.Create.CreateDiscussion

@{
    if (HttpContext.Request.Cookies["username"] == null)
    {
        Response.Redirect("/NotLoggedIn");
    }
}

<!DOCTYPE html>

<h1>Create Discussion</h1>
    
<div class="row">  
    <div class="col-md-9">  
        <form method="post"> @*asp-page="Index"*@  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                  
            <div class="form-group">  
                <label asp-for="Title" style="font-size: 20px;" class="control-label"></label>  
                <input asp-for="Title" id="TitleInput" name="TitleInput" runat="server" style="width: 800px" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Body" style="font-size: 20px;" class="control-label"></label>
                <textarea asp-for="Body" id="BodyInput" name="BodyInput" class="form-control" TextMode="MultiLine" 
                                                            style=";height: 200px;text-align: left;" runat="server"></textarea>  
                <span asp-validation-for="Body" class="text-danger"></span>  
            </div>
            <div class="form-group">  
                <input type="submit" value="Create Discussion" class="btn btn-primary" asp-page-handler="CreateReply" asp-route-sessioncount="30" /> 
            </div>
            <b>@ViewData["msg"]</b>  
        </form>  
    </div>  
</div>  